{% set choices = agFieldValue(entity, field) %}
{% if (choices is empty) %}
    -
{% else %}
    <ul class="list-group list-group-flush">
        {% for choice in choices %}
            {% set label = agChoiceLabels(choice, field)|first %}
            {% set value = agChoiceValues(choice, field)|first %}
            <li class="ms-3">
                <a href="{{ agRun(agActionUrl, 'grid', {'filter': {'tags': [value]}}) }}">{{ label }}</a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
